<% title "Post" %>

<p>
  <strong>User:</strong>
  <%=h @post.user.name %>
</p>
<p>
  <strong>Blog:</strong>
  <%=h @post.blog.title %>
</p>
<p>
  <strong>Title:</strong>
  <%=h @post.title %>
</p>
<p>
  <strong>Body:</strong>
  <%=h @post.body %>
</p>
<p>
	<strong>Tags:</strong>
	<%=h @post.tag_list %>
</p>
<p>
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", posts_path %>
</p>
