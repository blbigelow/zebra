<h2>Login</h2>

<% form_for @user_session, :url => user_sessions_path do |f| -%>
  <%= f.label :email, "Email" %>
	<%= f.text_field :email %>
	<br/>
	<%= f.label :password, "Password" %>
	<%= f.password_field :password %>
	<br/>
	<%= f.label :remember_me, "Remember Me" %>
	<%= f.check_box :remember_me %>
	<br/>
	<%= f.submit "Login" %>
<% end -%>